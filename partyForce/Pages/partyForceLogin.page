<apex:page showHeader="false"  sidebar="false" title="partyForce" standardStylesheets="false">
     <form id="form">
         <p>Login to begin registering for events, see your agenda and more!</p>
         <ul class="formList">
             <li>
                 <label>Email:</label>
                 <input type="text" name="email" maxlength="30"  class="required email" minlength="2" />
             </li>
             <li>
                 <label>Password:</label>
                 <input type="password" name="PartyForce_Password__c" maxlength="30" class="required" minlength="5"/>
             </li>  
             <li>
                 <input type="button" id="submit" name="submit" value="Login"  onClick="loginUser();"/> <input type="button" value="Join" onClick="loadPage('partyForce/partyForceSignUp');" /> 
             </li>             
                                          
         </ul>
     </form>
     
     <div id="statusDiv"></div>
     
     
</apex:page>